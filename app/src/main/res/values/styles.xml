<resources>

    <style name="MaterialTheme" parent="ParentMaterialTheme">

    </style>

    <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
