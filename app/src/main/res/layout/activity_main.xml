<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tim.androidshowcase.Activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:minHeight="?attr/actionBarSize"
        android:elevation="5dp">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btnRecyclerViewSharedElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView + Shared Elements"/>

    <Button
        android:id="@+id/btnRestClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REST Client"/>

    <Button
        android:id="@+id/btnFragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragments"/>

    <Button
        android:id="@+id/btnViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewModel"/>

    <Button
        android:id="@+id/btnSharedPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared Preferences"/>

</LinearLayout>
