<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonPlusOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPlusOneOnClick"
        android:text="+1"/>

    <Button
        android:id="@+id/buttonPlusTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPlusTwoOnClick"
        android:text="+2"/>

    <Button
        android:id="@+id/buttonMinusOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonMinusOneOnClick"
        android:text="-1"/>

    <Button
        android:id="@+id/buttonMinusTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonMinusTwoOnClick"
        android:text="-2"/>

    <TextView
        android:id="@+id/textViewCounter"
        android:text="0"
        android:textSize="200dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>