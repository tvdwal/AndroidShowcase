<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tim.androidshowcase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.RecyclerViewSharedElementActivity_" />
        <activity android:name=".Activities.RecycleViewDetailedActivity_" />
        <activity android:name=".Activities.RestClientActivity_" />
        <activity android:name=".Activities.FragmentsActivity_" />
        <activity android:name=".Activities.ViewModelActivity_" />
        <activity android:name=".Activities.SharedPreferenceActivity_" />

        <receiver android:name=".Activities.RestClientActivity$MyPokemonReceiver"></receiver>

    </application>

</manifest>